{
    "name": "laravelio/portal",
    "description": "The source code for the Laravel.io community portal.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "bugsnag/bugsnag-laravel": "^2.4",
        "doctrine/dbal": "^2.5",
        "laravel/framework": ">=5.5",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        
        "lasserafn/php-initial-avatar-generator": "^2.0",
        "league/commonmark": "^0.15.2",
        "roave/security-advisories": "dev-master",
        "spatie/laravel-migrate-fresh": "^1.4",
        "spatie/laravel-robots-middleware": "^1.0",
        "tijsverkoyen/akismet": "^1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.6",
        "jakub-onderka/php-console-highlighter": "^0.3.2",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "laravel/browser-kit-testing": "^1.0",
        "laravel/homestead": "^5",
        "mockery/mockery": "0.9.*",
        "phpspec/phpspec": "^3.2",
        "phpunit/phpunit": "~6.0",
        "symfony/css-selector": "^3.1",
        "symfony/dom-crawler": "^3.1",
		 "filp/whoops": "~2.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "start": [
            "composer install",
            "homestead make --no-after"
        ],
        "setup": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate",
            "php artisan migrate --seed",
            "yarn install",
            "yarn dev"
        ],
        "test": "phpunit --stop-on-failure",
        "spec": "phpspec run"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
